{
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    // alias
    "baseUrl": ".",
    "paths": {
      "@components/*": ["./src/components/*"],
      "@constant/*": ["./src/constant/*"],
      "@pages/*": ["./src/pages/*"],
      "@utils": ["./src/utils/index"],
      "@reducers": ["./src/reducers/index"],
      "@actions": ["./src/actions/index"]
    }
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}
